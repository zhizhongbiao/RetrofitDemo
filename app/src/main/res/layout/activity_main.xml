<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.tianyudg.retrofitdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="match_parent"
            android:text="Login"
            android:onClick="loginClick"
            android:layout_height="40dp" />


        <Button
            android:layout_width="match_parent"
            android:text="newList"
            android:onClick="newListClick"
            android:layout_height="40dp" />

        <Button
            android:layout_width="match_parent"
            android:text="secondList"
            android:onClick="secondListClick"
            android:layout_height="40dp" />


        <Button
            android:layout_width="match_parent"
            android:text="mapTest"
            android:onClick="mapTestClick"
            android:layout_height="40dp" />


        <Button
            android:layout_width="match_parent"
            android:text="flatMapTest"
            android:onClick="flatMapTestClick"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Hello World!"
            android:textColor="#FF0000" />
    </LinearLayout>


</ScrollView>
